
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="shortcut icon" href="~/assets/images/shortcut.png">

    <!-- Css -->
    <link rel="stylesheet" href="~/assets/css/stylelg.css">

    <!-- Awesome -->
    <link rel="stylesheet" href="~/assets/fonts/fontawesome-free-6.0.0-web/css/all.min.css">
</head>

<body>
    <div class="container">
        <div class="box box-one">
            <div class="logo">
                <img src="~/assets/images/logo.png" alt="" srcset="">
                <h2>PBA<span class="danger">Education</span></h2>
            </div>
            <button>
                <img class="profile-photo" src="~/assets/images/google.png" width="19">
                <span>Sign in with Google</span>
            </button>
            <button>
                <img class="profile-photo" src="~/assets/images/apple.png" width="19">
                <span>Sign in with Apple</span>
            </button>
        </div>
        <h5>Or</h5>
        <div class="box box-two">
            <form>
                <input type="text" placeholder="Phone,email, or username" />
                <input class="pwd" type="password" placeholder="Your password" />

            </form>
            <button class="next-btn">Login</button>
            <button>Forget password</button>
        </div>
        <p>Don't have an account <a href="#">Sign Up</a></p>
    </div>
</body>

</html>
