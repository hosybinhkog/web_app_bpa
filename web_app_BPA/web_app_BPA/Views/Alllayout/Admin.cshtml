
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin</title>
    <link rel="shortcut icon" href="~/assets/images/shortcut.png">

    <!-- Css -->
    <link rel="stylesheet" href="~/assets/css/styledb.css">

    <!-- Awesome -->
    <link rel="stylesheet" href="~/assets/fonts/fontawesome-free-6.0.0-web/css/all.min.css">

    <!-- Slider -->
</head>

<body>
    <div class="container">
        <aside>
            <div class="top">
                <div class="logo">
                    <img src="~/assets/images/logo.png" alt="" srcset="">
                    <h2>PBA<span class="danger">Education</span></h2>
                </div>
                <div class="close" id="close-btn">
                    <span><i class="fas fa-times"></i></span>
                </div>
            </div>

            <div class="sidebar">
                <a href="#" class="active">
                    <span>
                        <i class="fas fa-th-large"></i>
                    </span>
                    <h3>DashBoard</h3>
                </a>

                <a href="#">
                    <span>
                        <i class="far fa-user"></i>
                    </span>
                    <h3>Customers</h3>
                </a>

                <a href="#">
                    <span>
                        <i class="fas fa-bell"></i>
                    </span>
                    <h3>Notification</h3>
                    <span class="message-count">26</span>
                </a>

                <a href="#">
                    <span>
                        <i class="fas fa-chart-area"></i>
                    </span>
                    <h3>Statistical</h3>
                </a>

                <a href="#">
                    <span>
                        <i class="fas fa-bullhorn"></i>
                    </span>
                    <h3>Reports</h3>
                </a>

                <a href="#">
                    <span>
                        <i class="fas fa-door-open"></i>
                    </span>
                    <h3>LOG OUT</h3>
                </a>
            </div>
        </aside>

        <main>
            <h1>DashBoard</h1>

            <div class="date">
                <input type="date">
            </div>

            <div class="insights">
                <div class="sales">
                    <span><i class="fas fa-chart-pie"></i></span>
                    <div class="middle">
                        <div class="left">
                            <h3>Total Sales</h3>
                            <h1>$25,024</h1>
                        </div>
                        <div class="progress">
                            <svg>
                                <circle cx='38' cy='38' r='36'></circle>
                            </svg>
                            <div class="number">
                                <p>81%</p>
                            </div>
                        </div>
                    </div>
                    <small class="textmuted">Last 24 Hours</small>
                </div>
                <!-- End sales -->
                <div class="expenses">
                    <span> <i class="fas fa-shapes"></i></span>
                    <div class="middle">
                        <div class="left">
                            <h3>Total Expenses</h3>
                            <h1>$25,024</h1>
                        </div>
                        <div class="progress">
                            <svg>
                                <circle cx='38' cy='38' r='36'></circle>
                            </svg>
                            <div class="number">
                                <p>61%</p>
                            </div>
                        </div>
                    </div>
                    <small class="textmuted">Last 24 Hours</small>
                </div>
                <!-- End expenses -->

                <div class="income">
                    <span> <i class="fas fa-chart-bar"></i></span>
                    <div class="middle">
                        <div class="left">
                            <h3>Total Income</h3>
                            <h1>$25,024</h1>
                        </div>
                        <div class="progress">
                            <svg>
                                <circle cx='38' cy='38' r='36'></circle>
                            </svg>
                            <div class="number">
                                <p>41%</p>
                            </div>
                        </div>
                    </div>
                    <small class="textmuted">Last 24 Hours</small>
                </div>
                <!-- End income -->
            </div>
            <!-- End Insights -->

            <div class="recent-orders">
                <h2>Course</h2>
                <table>
                    <thead>
                        <tr>
                            <th>Course Name</th>
                            <th>Course ID</th>
                            <th>Payment</th>
