                </div>
            </div>
            <!-- End top -->

            <div class="recent-updates">
                <h2>Course Updates</h2>
                <div class="updates">
                    <div class="update">
                        <div class="profile-photo">
                            <img src="~/assets/images/user2.png" alt="" srcset="">
